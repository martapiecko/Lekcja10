<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.x.lekcja10.MainActivity">

    <ImageView
        android:id="@+id/kompas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/compass"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/azymut" />

    <ImageView
        android:id="@+id/strzalka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/compass_needle_dl"
        android:layout_marginBottom="147dp"
        android:layout_above="@+id/azimuth"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/azymut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Azymut:"
        android:textSize="10pt"
        android:layout_marginTop="380dp" />

    <TextView
        android:id="@+id/azimuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:text="0"
        android:layout_alignBaseline="@+id/azymut"
        android:layout_alignBottom="@+id/azymut"
        android:layout_toEndOf="@+id/azymut"
        android:layout_marginStart="14dp" />

    <TextView
        android:id="@+id/sensors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8dp"
        android:layout_marginTop="415dp" />

</RelativeLayout>
